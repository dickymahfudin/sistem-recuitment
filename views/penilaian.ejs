<div
  id="recipients"
  class="p-8 mt-8 lg:mt-0 rounded shadow bg-gray-900 border border-gray-800 rounded-xl p-8"
>
  <h1
    class="text-center text-gray-100 text-base text-5xl no-underline hover:no-underline font-bold mb-8"
  >
    Penilaian Calon
  </h1>
  <form method="POST" action="/penilaian">
    <div class="grid grid-cols-1 md:grid-cols-3">
      <div class="w-full mb-8">
        <div class="flex items-center">
          <select
            name="id"
            required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none"
          >
            <option disabled selected value>-- Pilih Calon --</option>
            <% for(let i=0; i < datas.length ; i++) { const data = datas[i]%>
            <option id="<%= data.id %>" value="<%= data.id %>">
              <%= data.nama%>
            </option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="pendidikan" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Jenjang Pendidikan</option>
              <option id="S2" value="S2">S2</option>
              <option id="S3" value="S3">S3</option>
          </select>
        </div>
      </div>
      
      <div class="w-full mb-8">
        <div class="flex items-center">
          <input type="number" min="3" max="4" step="0.1" required placeholder="IPK" name="ipk" class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none" />
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="mengajar" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Pengalaman Mengajar</option>
              <option value=1>Kurang Dari 6 Bulan</option>
              <option value=2>6 Bulan Sampai 1.5 Tahun</option>
              <option value=3>Lebih dari 2 Tahun</option>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="karyaIlmiah" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Memiliki Publikasi Dalam Karya Ilmiah</option>
              <option value=1>Tidak Ada</option>
              <option value=2>Sedikit</option>
              <option value=3>Banyak</option>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="materi" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Kecakapan Dalam Memberikan Materi Perkuliahan</option>
              <option value=1>Kurang Baik</option>
              <option value=2>Cukup</option>
              <option value=3>Baik</option>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="sertifikat" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Memiliki Sertifikat Keahlian</option>
              <option value=1>Tidak Linier</option>
              <option value=2>Linier</option>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="toefl" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Nilai toefl</option>
              <option value=1>Kurang dari 100</option>
              <option value=2>100 Sampai 200</option>
              <option value=3>lebih dari 200</option>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <input type="number" min="3" max="10" step="0.1" required placeholder="Nilai Dari Seleksi Kompetensi" name="kompetensi" class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none" />
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="kesehatan" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Nilai Dari Test Kesehatan</option>
              <option value="1">Kurang Baik</option>
              <option value="2">Cukup</option>
              <option value="3">Baik</option>
          </select>
        </div>
      </div>

      <div class="w-full mb-8">
        <div class="flex items-center">
          <select name="berinteraksi" required
            class="focus:ring-2 focus:ring-yellow-600 mx-6 px-8 w-full border rounded px-3 py-5 text-gray-700 focus:outline-none">
            <option disabled selected value>Kemampuan Berinteraksi</option>
              <option value="1">Kurang Baik</option>
              <option value="2">Cukup</option>
              <option value="3">Baik</option>
          </select>
        </div>
      </div>

    </div>
    <button
      type="submit"
      class="w-full py-5 rounded-full bg-blue-600 text-gray-100 focus:outline-none hover:bg-blue-700"
    >
      Nilai
    </button>
  </form>
</div>
